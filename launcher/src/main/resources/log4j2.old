<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        jskbxkbcvx
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!--            имя файла логов/>-->
        <File name="LogToFile" fileName="logs/imarket.log">
            <PatternLayout>
                <!--            формат вывода в файл/>-->
                <Pattern>%d %p %c{1.} [%t] %M:%L - %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="imarket" level="info" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <!--            <AppenderRef ref="LogToConsole"/>-->
        </Logger>
        <Logger name="imarket_console" level="error" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>

</Configuration>